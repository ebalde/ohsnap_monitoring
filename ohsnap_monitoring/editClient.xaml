        <Label Content="Contact Name" HorizontalAlignment="Left" Height="30" Margin="5,136,0,0" VerticalAlignment="Top" Width="206" BorderBrush="Black" BorderThickness="1" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        <Button x:Name="ecAddRowButton" Content="      Add Row" HorizontalAlignment="Left" Height="28" Margin="213,101,0,0" VerticalAlignment="Top" Width="97"/>
        <Image HorizontalAlignment="Left" Height="25" Margin="217,104,0,0" VerticalAlignment="Top" Width="23" Source="images/red-pluspng.png"/>
        <Button x:Name="ecSaveButton" Content="Save" HorizontalAlignment="Left" Height="28" Margin="317,101,0,0" VerticalAlignment="Top" Width="97"/>
        <Image HorizontalAlignment="Left" Height="28" Margin="317,101,0,0" VerticalAlignment="Top" Width="30" Source="images/save floppy.png"/>

    </Grid>
</Window>
