        mc:Ignorable="d" Height="307" Width="436" ResizeMode="NoResize">
    <Grid>
        <Label Content="Edit Client" Height="45" Width="428" FontSize="24" FontWeight="Bold" BorderBrush="Black" Foreground="#FF1B2AF0" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" VerticalAlignment="Top" HorizontalAlignment="Left" BorderThickness="0,0,0,1"/>
        <Label Content="Client Name :" HorizontalAlignment="Left" Height="27" Margin="4,59,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold"/>
        <TextBox x:Name="ecClientNameTextBox" HorizontalAlignment="Left" Height="28" Margin="112,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="306" BorderBrush="Black"/>
        <TextBox x:Name="ecContactName1TextBox" HorizontalAlignment="Left" Height="28" Margin="5,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206" BorderBrush="Black"/>
        <TextBox x:Name="ecContactEmail1TextBox" HorizontalAlignment="Left" Height="28" Margin="212,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206" BorderBrush="Black"/>
